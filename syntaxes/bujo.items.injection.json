            "match": "((?<=\\s\\[o)\\]|(?<=\\s)\\[(?=o\\]))|(?<=\\s\\[)(o)(?=\\])|(?<=\\s\\[o\\]\\s)([!?*])(?=[^\\S\\n]\\S)|(?<=\\s\\[o\\][^\\S\\n])(?![^\\S]|[!?*])(.*?)(?=\\s+\\|\\s+\\[\\[|\\s+\\^[a-z0-9]{12}|(?:\\s*\\r\\n|\\s*\\r|\\s*\\n)|\\s+\\|\\s+.+\\|)|(?<=\\s\\[o\\][^\\S\\n][!?*][^\\S\\n])(?![^\\S])(.*?)(?=\\s+\\|\\s+\\[\\[|\\s+\\^[a-z0-9]{12}|(?:\\s*\\r\\n|\\s*\\r|\\s*\\n)|\\s+\\|\\s+.+\\|)",
            "captures": {
