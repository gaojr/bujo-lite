{
    "name": "bujo-lite",
    "displayName": "Bullet Journal Markdown - Lite",
    "description": "Bullet Journal",
    "publisher": "gaojr",
    "icon": "assets/icon/bujo_circle_128.png",
    "private": true,
    "version": "0.0.1",
    "license": "MIT",
    "engines": {
        "vscode": "^1.98.0"
    },
    "homepage": "https://github.com/gaojr/bujo-lite#readme",
    "repository": {
        "url": "https://github.com/gaojr/bujo-lite",
        "type": "git"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "bujo.symbol.setCompleted",
                "title": "BuJo: Set Completed"
            },
            {
                "command": "bujo.symbol.setOpened",
                "title": "BuJo: Set Open"
            },
            {
                "command": "bujo.symbol.setStarted",
                "title": "BuJo: Set Started"
            },
            {
                "command": "bujo.symbol.setDropped",
                "title": "BuJo: Set Dropped"
            }
        ],
        "grammars": [
            {
                "path": "./syntaxes/bujo.entry.injection.json",
                "scopeName": "bujo.entry.injection",
                "injectTo": [
                    "text.html.markdown"
                ]
            }
        ],
        "snippets": [
            {
                "language": "markdown",
                "path": "./snippets/bujo.markdown.json"
            }
        ],
        "keybindings": [
            {
                "key": "alt+x",
                "command": "bujo.symbol.setCompleted",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+o",
                "command": "bujo.symbol.setOpened",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+-",
                "command": "bujo.symbol.setDropped",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+/",
                "command": "bujo.symbol.setStarted",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+e",
                "command": "bujo.symbol.setEvent",
                "args": {
                    "symbol": "o"
                },
                "when": "editorTextFocus && editorLangId == markdown"
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "bujo.task.todo.notation",
                        "settings": {
                            "foreground": "#7599C3"
                        }
                    },
                    {
                        "scope": "bujo.task.todo.symbol",
                        "settings": {
                            "foreground": "#00000000"
                        }
                    },
                    {
                        "scope": "bujo.task.todo.modifier",
                        "settings": {
                            "foreground": "#FF6E64",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.todo.text",
                        "settings": {
                            "foreground": "#7599C3"
                        }
                    },
                    {
                        "scope": "bujo.task.todo.text.modifier",
                        "settings": {
                            "foreground": "#7599C3",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.doing.notation",
                        "settings": {
                            "foreground": "#77BED9"
                        }
                    },
                    {
                        "scope": "bujo.task.doing.symbol",
                        "settings": {
                            "foreground": "#77BED9"
                        }
                    },
                    {
                        "scope": "bujo.task.doing.modifier",
                        "settings": {
                            "foreground": "#FF6E64",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.doing.text",
                        "settings": {
                            "foreground": "#77BED9",
                            "fontStyle": "italic bold"
                        }
                    },
                    {
                        "scope": "bujo.task.doing.text.modifier",
                        "settings": {
                            "foreground": "#77BED9",
                            "fontStyle": "bold italic underline"
                        }
                    },
                    {
                        "scope": "bujo.task.done.notation",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.task.done.symbol",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.task.done.modifier",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.done.text",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.task.done.text.modifier",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.deleted.notation",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.task.deleted.symbol",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.task.deleted.modifier",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.task.deleted.text",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.task.deleted.text.modifier",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.event.notation",
                        "settings": {
                            "foreground": "#D6A418"
                        }
                    },
                    {
                        "scope": "bujo.event.symbol",
                        "settings": {
                            "foreground": "#D6A418"
                        }
                    },
                    {
                        "scope": "bujo.event.modifier",
                        "settings": {
                            "foreground": "#FF6E64"
                        }
                    },
                    {
                        "scope": "bujo.event.text",
                        "settings": {
                            "foreground": "#D6A418"
                        }
                    },
                    {
                        "scope": "bujo.event.text.modifier",
                        "settings": {
                            "foreground": "#D6A418"
                        }
                    }
                ]
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "vscode:prepublish": "npm run package",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "package": "webpack --mode production --devtool hidden-source-map"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/lodash": "^4.14.180",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.65.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "ts-loader": "^9.3.1",
        "typescript": "^4.5.5",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "lodash": "^4.17.21",
        "nanoid": "^3.3.1"
    }
}
