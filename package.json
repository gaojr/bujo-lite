                        }
                    },
                    {
                        "scope": "bujo.timeblock.revision.time.parenthesis.open",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.timeblock.revision.time.hour",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.timeblock.revision.time.colon",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.timeblock.revision.time.minute",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.timeblock.revision.time.parenthesis.close",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.timeblock.revision.text",
                        "settings": {
                            "foreground": "#c85f5f",
                            "fontStyle": "bold underline"
                        }
                    },
                    {
                        "scope": "bujo.timeblock.chunk.title",
                        "settings": {
                            "foreground": "#7599C3"
                        }
                    },
                    {
                        "scope": "bujo.timeblock.chunk.note",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.grid.horizontal",
                        "settings": {
                            "foreground": "#6d6d6d92"
                        }
                    },
                    {
                        "scope": "bujo.grid.colon",
                        "settings": {
                            "foreground": "#6d6d6d92"
                        }
                    },
                    {
                        "scope": "bujo.grid.vertical",
                        "settings": {
                            "foreground": "#6d6d6d92"
                        }
                    }
                ]
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/lodash": "^4.14.180",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.65.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@vscode/test-electron": "^2.1.3",
        "esbuild": "^0.14.38",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "lodash": "^4.17.21",
        "nanoid": "^3.3.1"
    }
}
