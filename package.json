{
    "name": "bujo",
    "displayName": "Bullet Journal Markdown Workflows",
    "description": "Bullet Journal markdown workflows for managing tasks and notes.",
    "publisher": "mihaiconstantin",
    "icon": "assets/icon/bujo_circle_128.png",
    "private": true,
    "version": "2.2.0",
    "license": "MIT",
    "engines": {
        "vscode": "^1.65.0"
    },
    "homepage": "https://github.com/mihaiconstantin/bujo",
    "repository": {
        "url": "https://github.com/mihaiconstantin/bujo",
        "type": "git"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onCommand:bujo.setMigratedForward",
        "onCommand:bujo.setMigratedBackward",
        "onCommand:bujo.setCompleted",
        "onCommand:bujo.setOpen",
        "onCommand:bujo.setInProgress",
        "onCommand:bujo.setDropped",
        "onCommand:bujo.setSymbol",
        "onCommand:bujo.scheduleToTimeTrackingTable",
        "onCommand:bujo.recordTime",
        "onCommand:bujo.calculateTime"
    ],
    "contributes": {
        "commands": [
            {
                "command": "bujo.setMigratedForward",
                "title": "BuJo: Set Migrated Forward"
            },
            {
                "command": "bujo.setMigratedBackward",
                "title": "BuJo: Set Migrated Backward"
            },
            {
                "command": "bujo.setCompleted",
                "title": "BuJo: Set Completed"
            },
            {
                "command": "bujo.setOpen",
                "title": "BuJo: Set Open"
            },
            {
                "command": "bujo.setInProgress",
                "title": "BuJo: Set In Progress"
            },
            {
                "command": "bujo.setDropped",
                "title": "BuJo: Set Dropped"
            },
            {
                "command": "bujo.scheduleToTimeTrackingTable",
                "title": "BuJo: Schedule To Time Tracking Table"
            },
            {
                "command": "bujo.recordTime",
                "title": "BuJo: Record Time"
            },
            {
                "command": "bujo.calculateTime",
                "title": "BuJo: Calculate Total Time"
            }
        ],
        "configuration": {
            "title": "BuJo",
            "properties": {
                "bujo.scheduler.dailyPlannerPrefix": {
                    "type": "string",
                    "default": "log",
                    "markdownDescription": "Specifies the prefix for the daily planner file (e.g., `log.2022.03.20`)."
                },
                "bujo.scheduler.wikiLinkName": {
                    "type": "string",
                    "default": "alias",
                    "enum": ["alias", "filename"],
                    "markdownEnumDescriptions": [
                      "Use the wiki link **alias** as task name for scheduling (e.g., `[[`**`alias`**`|filename]]`)",
                      "Use the wiki link **filename** as task name for scheduling (e.g., `[[alias|`**`filename`**`]]`)"
                    ]
                },
                "bujo.scheduler.symbolForScheduledEntry": {
                    "type": "string",
                    "default": ">",
                    "markdownDescription": "Specifies the symbol to set for a scheduled entry (e.g., `>`)."
                }
            }
        },
        "grammars": [
            {
                "path": "./syntaxes/bujo.entry.injection.json",
                "scopeName": "bujo.entry.injection",
                "injectTo": [
                    "text.html.markdown"
                ]
            },
            {
                "path": "./syntaxes/bujo.grid.injection.json",
                "scopeName": "bujo.grid.injection",
                "injectTo": [
                    "text.html.markdown"
                ]
            },
            {
                "path": "./syntaxes/bujo.timeblock.injection.json",
                "scopeName": "bujo.timeblock.injection",
                "injectTo": [
                    "text.html.markdown"
                ]
            },
            {
                "path": "./syntaxes/bujo.timetrack.injection.json",
                "scopeName": "bujo.timetrack.injection",
                "injectTo": [
                    "text.html.markdown"
                ]
            }
        ],
        "snippets": [
            {
                "language": "markdown",
                "path": "./snippets/bujo.markdown.json"
            }
        ],
        "keybindings": [
            {
                "key": "alt+x",
                "command": "bujo.setSymbol",
                "args": {
                    "symbol": "x"
                },
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+o",
                "command": "bujo.setSymbol",
                "args": {
                    "symbol": " "
                },
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+-",
                "command": "bujo.setSymbol",
                "args": {
                    "symbol": "-"
                },
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+/",
                "command": "bujo.setSymbol",
                "args": {
                    "symbol": "/"
                },
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+,",
                "command": "bujo.setSymbol",
                "args": {
                    "symbol": "<"
                },
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+.",
                "command": "bujo.setSymbol",
                "args": {
                    "symbol": ">"
                },
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+p",
                "command": "bujo.setSymbol",
                "args": {
                    "symbol": "o"
                },
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+shift+p",
                "command": "bujo.scheduleToTimeTrackingTable",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "key": "alt+shift+t",
                "command": "bujo.recordTime",
                "when": "editorTextFocus && editorLangId == markdown"
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "bujo.task.open.notation",
                        "settings": {
                            "foreground": "#7599C3"
                        }
                    },
                    {
                        "scope": "bujo.task.open.symbol",
                        "settings": {
                            "foreground": "#00000000"
                        }
                    },
                    {
                        "scope": "bujo.task.open.modifier",
                        "settings": {
                            "foreground": "#FF6E64",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.open.text",
                        "settings": {
                            "foreground": "#7599C3"
                        }
                    },
                    {
                        "scope": "bujo.task.open.text.modifier",
                        "settings": {
                            "foreground": "#7599C3",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.in.progress.notation",
                        "settings": {
                            "foreground": "#77BED9"
                        }
                    },
                    {
                        "scope": "bujo.task.in.progress.symbol",
                        "settings": {
                            "foreground": "#77BED9"
                        }
                    },
                    {
                        "scope": "bujo.task.in.progress.modifier",
                        "settings": {
                            "foreground": "#FF6E64",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.in.progress.text",
                        "settings": {
                            "foreground": "#77BED9",
                            "fontStyle": "italic bold"
                        }
                    },
                    {
                        "scope": "bujo.task.in.progress.text.modifier",
                        "settings": {
                            "foreground": "#77BED9",
                            "fontStyle": "bold italic underline"
                        }
                    },
                    {
                        "scope": "bujo.task.completed.notation",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.task.completed.symbol",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.task.completed.modifier",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.completed.text",
                        "settings": {
                            "foreground": "#6D6D6D"
                        }
                    },
                    {
                        "scope": "bujo.task.completed.text.modifier",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.forward.notation",
                        "settings": {
                            "foreground": "#4D6C7D"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.forward.symbol",
                        "settings": {
                            "foreground": "#4D6C7D"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.forward.modifier",
                        "settings": {
                            "foreground": "#4D6C7D",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.forward.text",
                        "settings": {
                            "foreground": "#4D6C7D",
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.forward.text.modifier",
                        "settings": {
                            "foreground": "#4D6C7D",
                            "fontStyle": "italic bold"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.backward.notation",
                        "settings": {
                            "foreground": "#4D6C7D"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.backward.symbol",
                        "settings": {
                            "foreground": "#4D6C7D"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.backward.modifier",
                        "settings": {
                            "foreground": "#4D6C7D",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.backward.text",
                        "settings": {
                            "foreground": "#4D6C7D",
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "bujo.task.migrated.backward.text.modifier",
                        "settings": {
                            "foreground": "#4D6C7D",
                            "fontStyle": "italic bold"
                        }
                    },
                    {
                        "scope": "bujo.task.dropped.notation",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.task.dropped.symbol",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.task.dropped.modifier",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.task.dropped.text",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.task.dropped.text.modifier",
                        "settings": {
                            "foreground": "#6D6D6D",
                            "fontStyle": "strikethrough"
                        }
                    },
                    {
                        "scope": "bujo.event.notation",
                        "settings": {
                            "foreground": "#D6A418"
                        }
                    },
                    {
                        "scope": "bujo.event.symbol",
                        "settings": {
                            "foreground": "#D6A418"
                        }
                    },
                    {
                        "scope": "bujo.event.modifier",
                        "settings": {
                            "foreground": "#FF6E64"
                        }
                    },
                    {
                        "scope": "bujo.event.text",
                        "settings": {
                            "foreground": "#D6A418"
                        }
                    },
                    {
                        "scope": "bujo.event.text.modifier",
                        "settings": {
                            "foreground": "#D6A418"
                        }
                    },
                    {
                        "scope": "bujo.todo.start.hour",
                        "settings": {
                            "foreground": "#b5954b"
                        }
                    },
                    {
                        "scope": "bujo.todo.start.colon",
                        "settings": {
                            "foreground": "#919191"
                        }
                    },
                    {
                        "scope": "bujo.todo.start.minute",
                        "settings": {
                            "foreground": "#b5954b"
                        }
                    },
                    {
                        "scope": "bujo.todo.separator",
                        "settings": {
