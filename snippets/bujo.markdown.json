{
    "task": {
        "prefix": "ts",
        "scope": "markdown",
        "body": "- [ ] $1",
        "description": "Enter a task"
    },
    "task from clipboard": {
        "prefix": "tsc",
        "scope": "markdown",
        "body": "- [ ] $CLIPBOARD$0",
        "description": "Enter a task from clipboard"
    },

    "scratch": {
        "prefix": "sc",
        "scope": "markdown",
        "body": [
            "~${TM_SELECTED_TEXT}~"
        ],
        "description": "Scratch a text selection"
    },

    "time": {
        "prefix": "time",
        "scope": "markdown",
        "body": "$CURRENT_HOUR:$CURRENT_MINUTE",
        "description": "Enter the current time"
    },
    "date": {
        "prefix": "date",
        "scope": "markdown",
        "body": "$CURRENT_YEAR.$CURRENT_MONTH.$CURRENT_DATE",
        "description": "Enter the current date"
    },
    "date time": {
        "prefix": "datetime",
        "scope": "markdown",
        "body": "$CURRENT_YEAR.$CURRENT_MONTH.$CURRENT_DATE $CURRENT_HOUR:$CURRENT_MINUTE",
        "description": "Enter the current date and time"
    },

    "time track table": {
        "prefix": "tt",
        "scope": "markdown",
        "body": [
            "|     Tracker | Task             | Backlog  |",
            "| ----------: | :--------------- | :------- |",
            "| 00:00-00:00 | [ ] Example task | [[link]] |",
            "|             |                  |          |"

        ],
        "description": "Enter a time tracking table"
    },
    "time track task": {
        "prefix": "ttt",
        "scope": "markdown",
        "body": [
            "|             | [ ] ${1}         |          |"
        ],
        "description": "Enter a task in the time tracking table"
    },
    "time track empty": {
        "prefix": "tte",
        "scope": "markdown",
        "body": [
            "|             |                  |          |"
        ],
        "description": "Add an empty row in the time tracking table"
    },
    "time track clipboard": {
        "prefix": "ttc",
        "scope": "markdown",
        "body": [
            "|         | [ ] ${CLIPBOARD/(-\\s\\[[\\sx\\/<>]\\]\\s|\\^[a-z1-9].*|\\[\\[|\\|.*\\]\\])//g} | ${1}        |"
        ],
        "description": "Enter a task from clipboard in the time tracking table"
    },

    "time block table": {
        "prefix": "tb",
        "scope": "markdown",
        "body": [
            "|        Time | Block         |",
            "| ----------: | :------------ |",
            "|     (00:00) | (Revision #1) |",
            "|             |               |",
            "| 00:00-00:00 | Chunk (#1)    |",
            "|             | - Chunk note  |",
            "|             |               |"
        ],
        "description": "Enter a time blocking table"
    },
    "time block empty": {
        "prefix": "tbe",
        "scope": "markdown",
        "body": [
            "|             |               |"
        ],
        "description": "Enter an empty row in the time block table"
    },
    "time block revision": {
        "prefix": "tbr",
        "scope": "markdown",
        "body": [
            "|     ($CURRENT_HOUR:$CURRENT_MINUTE) | (Revision #${1}) |"
        ],
        "description": "Enter a revision row in the time block table"
    },
    "time block chunk": {
        "prefix": "tbc",
        "scope": "markdown",
        "body": [
            "| 00:00-00:00 | ${1}          |"
        ],
        "description": "Enter a chunk row in the time block table"
    },
    "time block note": {
        "prefix": "tbn",
        "scope": "markdown",
        "body": [
            "|             | - ${1}        |"
        ],
        "description": "Enter a note row in the time block table"
    }
}
